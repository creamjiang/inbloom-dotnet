@using SampleWebApp.Components
@{
	Layout = null;
}
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
	<head>
		<title>inBloom API Library - Sample Web App</title>
        <script src="//ajax.aspnetcdn.com/ajax/4.0/1/MicrosoftAjax.js" type="text/javascript"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script type="text/javascript" src="ChromeLoader.js"></script>
        <script src="@Url.Content("~/Content/sharepointui.js")"></script>
		<link href="@Url.Content("~/Content/Bootstrap/css/bootstrap.min.css")" type="text/css" rel="stylesheet" />
		<style type="text/css">
			.btn-large {
				padding: 10px 30px 10px 30px;
			}
			.hero-unit {
				margin-top: 100px;
			}
			.hero-unit p:last-child {
				margin-top:30px;
			}
			small {
				float: left;margin: 20px 0 0 0;
			}
		</style>
	</head>
	<body>
        <!-- SP Chrome control placeholder -->
        <div id="chrome_ctrl_placeholder"></div>

        <div class="container">
            <div class="hero-unit" style="height:380px">
                <p>
                    This is a SharePoint Autohosted sample application and .NET library for providing developers a fast track to connecting with the inBloom data store.<br />
                    You can find further information at any of the links below:
                </p>
                <ul>
                    <li><a href="https://github.com/upeo/inbloom-dotnet">GitHub repository</a></li>
                    <li><a href="https://www.inbloom.org/sites/default/files/docs-developer/index.html">inBloom REST API Documentation</a></li>
                </ul>

                @{
                    if (!string.IsNullOrEmpty(ViewBag.UserName))
                    {
                        <p>You are currently logged in to SharePoint as: @ViewBag.UserName</p>
                    }
                    if (!string.IsNullOrEmpty(SessionInfo.Current.AccessToken))
                    {
                        <p>You are currently logged in to the inBoom API as: @SessionInfo.Current.FullName</p>
                        <p><a href="@Url.Action("Index", "Dashboard", SessionInfo.Current.SPContextRouteValues)" class="btn btn-large btn-primary">Go to Dashboard</a></p>
                    }
                    else
                    {
                        <p>
                            Login below to access the inBloom API<br />
                            <a href="@Url.Action("Login")" class="btn btn-large btn-primary">inBloom API Login</a>
                        </p>
                    }
                }
                <small>
                    The inBloom API .NET Library and sample application is developed &amp; maintained by <a href="http://www.upeo.com/">Upeo, LLC</a><br />
                    Additional contributions provided by <a href="http://www.3sharp.com/">3Sharp, LLC</a>
                </small>
            </div>
        </div>
	</body>
</html>