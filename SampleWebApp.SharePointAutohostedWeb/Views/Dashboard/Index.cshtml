@using SampleWebApp.Components
<h1>Dashboard</h1>
<p class="lead">Welcome to the inBloom .NET Library Sample Web App dashboard.</p>
<p>Use the navigation bar above to explore this application further.</p>

@{
    if (!string.IsNullOrEmpty(ViewBag.UserName))
    {
        <p>You are currently logged in to SharePoint as: @ViewBag.UserName</p>
    }
    if (!string.IsNullOrEmpty(SessionInfo.Current.AccessToken))
    {
        <p>You are currently logged in to the inBoom API as: @SessionInfo.Current.FullName</p>
        
    }
    else
    {
        <p>Login below to access the sample application</p>
        <p><a href="@Url.Action("Login")" class="btn btn-large btn-primary">Login</a></p>
    }
}